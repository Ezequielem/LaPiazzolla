@{
    ViewData["Title"] = "Home Page";
}   

    <div class="text-center" >
        <hr />
        <h1 class="display-4">Bienvenidos a La Piazzolla</h1> 
        <hr />
        <br />
        <div class="row">
            <div class="col-4">
                <div class="list-group" id="list-tab" role="tablist">
                    <a class="list-group-item list-group-item-action active" id="list-guitarra-list" data-toggle="list" href="#list-guitarra" role="tab" aria-controls="guitarra">Guitarra</a>
                    <a class="list-group-item list-group-item-action" id="list-bateria-list" data-toggle="list" href="#list-bateria" role="tab" aria-controls="bateria">Batería</a>
                    <a class="list-group-item list-group-item-action" id="list-canto-list" data-toggle="list" href="#list-canto" role="tab" aria-controls="canto">Canto</a>
                    <a class="list-group-item list-group-item-action" id="list-piano-list" data-toggle="list" href="#list-piano" role="tab" aria-controls="piano">Piano</a>
                    <a class="list-group-item list-group-item-action" id="list-bombo-list" data-toggle="list" href="#list-bombo" role="tab" aria-controls="bombo">Bombo</a>
                    <a class="list-group-item list-group-item-action" id="list-cajon-list" data-toggle="list" href="#list-cajon" role="tab" aria-controls="cajon">Cajón</a>
                    <a class="list-group-item list-group-item-action" id="list-flauta-list" data-toggle="list" href="#list-flauta" role="tab" aria-controls="flauta">Flauta</a>
                    <a class="list-group-item list-group-item-action" id="list-ukelele-list" data-toggle="list" href="#list-ukelele" role="tab" aria-controls="ukelele">Ukelele</a>
                    <a class="list-group-item list-group-item-action" id="list-bajo-list" data-toggle="list" href="#list-bajo" role="tab" aria-controls="bajo">Bajo</a>
                </div>
            </div>
            <div class="col-8">
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="list-guitarra" role="tabpanel" aria-labelledby="list-guitarra-list">
                        ... Esto es guitarra
                        <img class="img-fluid" src="~/Images/Guitarra-1.jpg" alt="guitarra" />
                    </div>
                    <div class="tab-pane fade" id="list-bateria" role="tabpanel" aria-labelledby="list-bateria-list">
                        ... Esto es batería
                        <img class="img-fluid" src="~/Images/Bateria-1.jpg" alt="bateria" />
                    </div>
                    <div class="tab-pane fade" id="list-canto" role="tabpanel" aria-labelledby="list-canto-list">
                        ... Esto es canto
                        <img class="img-fluid" src="~/Images/Canto-1.jpg" alt="canto" />
                    </div>
                    <div class="tab-pane fade" id="list-piano" role="tabpanel" aria-labelledby="list-piano-list">
                        ... Esto es piano
                        <img class="img-fluid" src="~/Images/Piano-1.jpg" alt="piano" />
                    </div>
                    <div class="tab-pane fade" id="list-bombo" role="tabpanel" aria-labelledby="list-bombo-list">
                        ... Esto es bombo
                        <img class="img-fluid" src="~/Images/Bombo-1.jpg" alt="bombo" />
                    </div>
                    <div class="tab-pane fade" id="list-cajon" role="tabpanel" aria-labelledby="list-cajon-list">
                        ... Esto es cajón
                        <img class="img-fluid" src="~/Images/Cajon-1.jpg" alt="cajon" />
                    </div>
                    <div class="tab-pane fade" id="list-flauta" role="tabpanel" aria-labelledby="list-flauta-list">
                        ... Esto es flauta
                        <img class="img-fluid" src="~/Images/Flauta-1.jpg" alt="flauta" />
                    </div>
                    <div class="tab-pane fade" id="list-ukelele" role="tabpanel" aria-labelledby="list-ukelele-list">
                        ... Esto es ukelele
                        <img class="img-fluid" src="~/Images/Ukelele-1.jpg" alt="ukelele" />
                    </div>
                    <div class="tab-pane fade" id="list-bajo" role="tabpanel" aria-labelledby="list-bajo-list">
                        ... Esto es bajo
                        <img class="img-fluid" src="~/Images/Bajo-1.jpg" alt="bajo" />
                    </div>
                </div>
            </div>
        </div>
    </div>