<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - La Piazzolla</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img class="figure-img" src="~/Images/logoPiazzolla.jpg" width="260" height="60" asp-append-version="true" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Contacto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Nosotros</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @*SLIDE SHOW*@
    <div class="container">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="7"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="8"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="9"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="10"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="11"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="12"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="13"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="14"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Images/PROPAGANDA6.jpg" alt="slide 1">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/PROPAGANDA18.jpg" alt="slide 2">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/PROPAGANDA17.jpg" alt="slide 3">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/PROPAGANDA5.jpg" alt="slide 4">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/PROPAGANDA4.jpg" alt="slide 5">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/PROPAGANDA3.jpg" alt="slide 6">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/PROPAGANDA12.jpg" alt="slide 7">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/PROPAGANDA7.jpg" alt="slide 8">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/PROPAGANDA8.jpg" alt="slide 9">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/PROPAGANDA9.jpg" alt="slide 10">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/PROPAGANDA10.jpg" alt="slide 11">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/PROPAGANDA11.jpg" alt="slide 12">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/PROPAGANDA21.jpg" alt="slide 13">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/PROPAGANDA20.jpg" alt="slide 14">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/PROPAGANDA19.jpg" alt="slide 15">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previo</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Siguiente</span>
            </a>
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - LaPiazzolla - <a href="http://sistemasgem.com/">GEM Systems</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    
</body>
</html>
